<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
$(document).ready(function() {
    // Photo preview
    $('#{{ form.photoFile.vars.id }}').change(function(e) {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                $('#photoPreview').attr('src', event.target.result).show();
            }
            reader.readAsDataURL(file);
        }
    });

    // Collection item management
    function setupCollection(collectionClass, addButtonClass, removeButtonClass) {
        const $collection = $(`.${collectionClass}`);
        const $addButton = $(`.${addButtonClass}`);
        
        // Remove any existing prototype elements
        $collection.find('.prototype').remove();
        
        $addButton.on('click', function(e) {
            e.preventDefault();
            const index = $collection.data('index');
            const prototype = $collection.data('prototype');
            
            // Create new form item (wrapped in a div with proper classes)
            const newItem = $(`<div class="collection-item position-relative">${prototype.replace(/__name__/g, index)}</div>`);
            
            // Add remove button
            const $removeBtn = $(`<button type="button" class="btn btn-sm btn-danger remove-btn position-absolute top-0 end-0 m-2 ${removeButtonClass}">
                <i class="fas fa-times"></i>
            </button>`);
            
            $removeBtn.on('click', function() {
                $(this).closest('.collection-item').remove();
            });
            
            newItem.prepend($removeBtn);
            $collection.append(newItem);
            
            // Initialize select2 for any select elements in the new item
            newItem.find('select').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });
            
            // Update index
            $collection.data('index', index + 1);
            
            // Scroll to the new item
            $('html, body').animate({
                scrollTop: newItem.offset().top - 100
            }, 500);
        });
        
        // Handle existing remove buttons
        $(document).on('click', `.${removeButtonClass}`, function() {
            $(this).closest('.collection-item').remove();
        });
    }
    
    // Initialize all collections
    setupCollection('education-collection', 'add-education', 'remove-education');
    setupCollection('experience-collection', 'add-experience', 'remove-experience');
    setupCollection('language-collection', 'add-language', 'remove-language');
    setupCollection('computer-skills-collection', 'add-computer-skill', 'remove-computer-skill');
    setupCollection('project-collection', 'add-project', 'remove-project');
    setupCollection('social-collection', 'add-social', 'remove-social');
    
    // Initialize Select2 for select elements
    $('select').select2({
        theme: 'bootstrap-5',
        width: '100%'
    });
    
    // Form validation
    $('.needs-validation').on('submit', function(event) {
        if (!this.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
