{% extends 'base.html.twig' %}

{% block title %}{{ cv.fullName }}'s CV{% endblock %}

{% block stylesheets %}
<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    line-height: 1.6;
    color: #333;
    background: #f5f5f5;
}

.cv-container {
    max-width: 210mm;
    margin: 20px auto;
    background: white;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
    min-height: 297mm;
}

.cv-header {
    background: #2c3e50;
    color: white;
    padding: 40px 40px 30px;
    text-align: center;
}

.cv-header h1 {
    font-size: 2.5em;
    font-weight: bold;
    margin-bottom: 10px;
    letter-spacing: 2px;
}

.cv-contact {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin-top: 20px;
    flex-wrap: wrap;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9em;
}

.contact-item i {
    width: 16px;
    text-align: center;
}

.cv-content {
    padding: 40px;
}

.cv-section {
    margin-bottom: 35px;
}

.section-title {
    font-size: 1.3em;
    font-weight: bold;
    color: #2c3e50;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
    padding-bottom: 8px;
    border-bottom: 2px solid #3498db;
}

.summary-text {
    font-size: 1em;
    line-height: 1.8;
    text-align: justify;
    color: #555;
}

.experience-item, .project-item, .education-item, .activity-item {
    margin-bottom: 25px;
    padding-bottom: 20px;
    border-bottom: 1px solid #eee;
}

.experience-item:last-child, .project-item:last-child, .education-item:last-child, .activity-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
    flex-wrap: wrap;
}

.item-title {
    font-size: 1.1em;
    font-weight: bold;
    color: #2c3e50;
    flex: 1;
}

.item-date {
    font-size: 0.9em;
    color: #7f8c8d;
    font-style: italic;
    white-space: nowrap;
    margin-left: 20px;
}

.item-subtitle {
    font-size: 1em;
    color: #3498db;
    margin-bottom: 10px;
    font-weight: 500;
}

.item-description {
    font-size: 0.95em;
    line-height: 1.7;
    color: #555;
    text-align: justify;
}

.item-description ul {
    padding-left: 20px;
    margin-top: 8px;
}

.item-description li {
    margin-bottom: 5px;
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 10px;
}

.skill-category {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid #3498db;
}

.skill-category h4 {
    font-size: 1.1em;
    color: #2c3e50;
    margin-bottom: 10px;
    font-weight: bold;
}

.skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.skill-tag {
    background: #ecf0f1;
    color: #2c3e50;
    padding: 4px 12px;
    border-radius: 15px;
    font-size: 0.85em;
    font-weight: 500;
}

.languages-list {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    margin-top: 10px;
}

.language-item {
    background: #f8f9fa;
    padding: 10px 15px;
    border-radius: 8px;
    border-left: 3px solid #3498db;
}

.language-name {
    font-weight: bold;
    color: #2c3e50;
}

.language-level {
    font-size: 0.9em;
    color: #7f8c8d;
}

.project-url {
    margin-top: 10px;
    padding: 10px;
    background: #f8f9fa;
    border-radius: 5px;
    border-left: 3px solid #3498db;
}

.project-url a {
    color: #3498db;
    text-decoration: none;
    font-weight: 500;
}

.project-url a:hover {
    text-decoration: underline;
}

.cv-actions {
    text-align: center;
    padding: 30px;
    background: #f8f9fa;
    border-top: 1px solid #eee;
}

.cv-btn {
    padding: 12px 30px;
    margin: 0 10px;
    border-radius: 5px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
}

.cv-btn-primary {
    background: #3498db;
    color: white;
    border: none;
}

.cv-btn-primary:hover {
    background: #2980b9;
}

.cv-btn-secondary {
    background: white;
    color: #3498db;
    border: 2px solid #3498db;
}

.cv-btn-secondary:hover {
    background: #3498db;
    color: white;
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
    .cv-container {
        margin: 10px;
        box-shadow: none;
    }
    
    .cv-header {
        padding: 30px 20px;
    }
    
    .cv-header h1 {
        font-size: 2em;
    }
    
    .cv-contact {
        flex-direction: column;
        gap: 10px;
    }
    
    .cv-content {
        padding: 30px 20px;
    }
    
    .item-header {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .item-date {
        margin-left: 0;
        margin-top: 5px;
    }
    
    .skills-grid {
        grid-template-columns: 1fr;
    }
    
    .cv-actions {
        padding: 20px;
    }
    
    .cv-btn {
        display: block;
        margin: 10px 0;
    }
}

/* Print Styles */
@media print {
    body {
        background: white !important;
    }
    
    .cv-container {
        box-shadow: none;
        margin: 0;
        max-width: none;
    }
    
    .cv-header {
        background: #2c3e50 !important;
        color: white !important;
        -webkit-print-color-adjust: exact;
        color-adjust: exact;
    }
    
    .cv-actions {
        display: none !important;
    }
    
    .cv-section {
        break-inside: avoid;
        page-break-inside: avoid;
    }
    
    .experience-item, .project-item, .education-item, .activity-item {
        break-inside: avoid;
        page-break-inside: avoid;
    }
}
</style>
{% endblock %}

{% block body %}
<div class="cv-container">
    <header class="cv-header">
        <h1>{{ cv.fullName }}</h1>
        <div class="cv-contact">
            <div class="contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>{{ cv.city }}</span>
            </div>
            <div class="contact-item">
                <i class="fas fa-envelope"></i>
                <span>{{ cv.email }}</span>
            </div>
            <div class="contact-item">
                <i class="fas fa-phone"></i>
                <span>{{ cv.phone }}</span>
            </div>
        </div>
    </header>

    <div class="cv-content">
        <section class="cv-section">
            <h2 class="section-title">Summary</h2>
            <div class="summary-text">{{ cv.summary }}</div>
        </section>

        {% if cv.experiences|length > 0 %}
        <section class="cv-section">
            <h2 class="section-title">Experience</h2>
            {% for experience in cv.experiences %}
            <div class="experience-item">
                <div class="item-header">
                    <div class="item-title">{{ experience.position }}</div>
                    <div class="item-date">
                        {{ experience.startDate|date('F Y') }} - 
                        {{ experience.endDate ? experience.endDate|date('F Y') : 'Present' }}
                    </div>
                </div>
                <div class="item-subtitle">{{ experience.company }}</div>
                <div class="item-description">{{ experience.description|nl2br }}</div>
            </div>
            {% endfor %}
        </section>
        {% endif %}

        {% if cv.projects|length > 0 %}
        <section class="cv-section">
            <h2 class="section-title">Projects</h2>
            {% for project in cv.projects %}
            <div class="project-item">
                <div class="item-header">
                    <div class="item-title">{{ project.name }}</div>
                    {% if project.date %}
                    <div class="item-date">{{ project.date|date('F Y') }}</div>
                    {% endif %}
                </div>
                <div class="item-description">{{ project.description|nl2br }}</div>
                {% if project.url %}
                <div class="project-url">
                    <strong>Project URL:</strong> 
                    <a href="{{ project.url }}" target="_blank">{{ project.url }}</a>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </section>
        {% endif %}

        {% if cv.educations|length > 0 %}
        <section class="cv-section">
            <h2 class="section-title">Education</h2>
            {% for education in cv.educations %}
            <div class="education-item">
                <div class="item-header">
                    <div class="item-title">{{ education.degree }}{% if education.fieldOfStudy %} in {{ education.fieldOfStudy }}{% endif %}</div>
                    <div class="item-date">
                        {{ education.startDate|date('F Y') }} - 
                        {{ education.endDate ? education.endDate|date('F Y') : 'Present' }}
                    </div>
                </div>
                <div class="item-subtitle">{{ education.institution }}</div>
                {% if education.description %}
                <div class="item-description">{{ education.description|nl2br }}</div>
                {% endif %}
            </div>
            {% endfor %}
        </section>
        {% endif %}

        {% if cv.languageSkills|length > 0 %}
        <section class="cv-section">
            <h2 class="section-title">Skills</h2>
            <div class="languages-list">
                {% for language in cv.languageSkills %}
                <div class="language-item">
                    <div class="language-name">{{ language.language }}</div>
                    <div class="language-level">{{ language.level }}</div>
                </div>
                {% endfor %}
            </div>
        </section>
        {% endif %}

        {% if cv.socialActivities|length > 0 %}
        <section class="cv-section">
            <h2 class="section-title">Social & Political Activities</h2>
            {% for activity in cv.socialActivities %}
            <div class="activity-item">
                <div class="item-header">
                    <div class="item-title">{{ activity.title }}</div>
                    {% if activity.startDate %}
                    <div class="item-date">
                        {{ activity.startDate|date('F Y') }} - 
                        {{ activity.endDate ? activity.endDate|date('F Y') : 'Present' }}
                    </div>
                    {% endif %}
                </div>
                {% if activity.organization %}
                <div class="item-subtitle">{{ activity.organization }}</div>
                {% endif %}
                {% if activity.description %}
                <div class="item-description">{{ activity.description|nl2br }}</div>
                {% endif %}
            </div>
            {% endfor %}
        </section>
        {% endif %}
    </div>

    <div class="cv-actions">
        <button onclick="window.print()" class="cv-btn cv-btn-primary">
            <i class="fas fa-print"></i> Print CV
        </button>
        <a href="{{ path('cv_edit', {'id': cv.id}) }}" class="cv-btn cv-btn-secondary">
            <i class="fas fa-edit"></i> Edit CV
        </a>
    </div>
</div>
{% endblock %}